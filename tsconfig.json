{
  "compilerOptions": {
    "outDir": "./dist/",
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es2016",
      "es2017",
      "esnext"
    ],
    "module": "es6",
    "target": "esnext",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}